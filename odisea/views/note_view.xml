<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- SEARCH VIEW -->
        <record id="view_odisea_note_filter" model="ir.ui.view">
            <field name="name">odisea.note.select</field>
            <field name="model">odisea.note</field>
            <field name="arch" type="xml">
                <search string="Note">
                    <!--<field name="dependency"/>
                    <field name="number"/>
                    <field name="created_year"/>>
                    <field name="exp_id"/>
                    <field name="create_date"/>-->
                </search>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_odisea_expedient_note" model="ir.ui.view">
            <field name="name">odisea.note.tree</field>
            <field name="model">odisea.note</field>
            <field name="arch" type="xml">
                <tree string="Note">
		   <button name="get_exp_file"
			   attrs="{'enabled':'enabled'}"
			   type="object" 
			   string="Download"
			   icon="gtk-file"/>
	           <field name="note_type"/>
		   <field name="note_id"/>
                   <field name="release_date"/>
                </tree>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_odisea_note_form" model="ir.ui.view">
            <field name="name">odisea.note.form</field>
            <field name="model">odisea.note</field>
            <field name="arch" type="xml">
                <form string="Note">
		<group>
		   <h1>
	               <field name="note_type" class="oe_inline" nolabel="1"/>
		       <field name="id_note" class="oe_inline" nolabel="1"/>/
	               <field name="release_year" class="oe_inline" nolabel="1"/>
		   </h1>
		</group>
		<group>
	           <field name="release_date" string="Fecha" nolabel="0"/>
		  <field name="position_ids"
			 widget="many2many_tags"
			 string="Posiciones"
			 options="{'no_create_edit': True}"/>
	   	   <field name="name" string="Nombre de archivo"/>
		</group>
<!--		   <field name="res_name"/>-->
                   <field name="datas" filename="datas_fname"/>
                   <field name="datas_fname" invisible="1"/>

		   <button class="oe_inline oe_stat_button" 
			   name="get_exp_file" 
			   type="object"
			   string="Download"
			   icon="fa-file-o"/>
		   <button class="oe_inline"
			   name="set_exp_file" 
			   type="object"
			   string="Upload"
			   icon="fa-file-o"/>
                </form>
            </field>
        </record>


    </data>
</openerp>
