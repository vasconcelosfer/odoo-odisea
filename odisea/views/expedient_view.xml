<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- SEARCH VIEW -->
        <record id="view_odisea_expedient_filter" model="ir.ui.view">
            <field name="name">odisea.expedient.select</field>
            <field name="model">odisea.expedient</field>
            <field name="arch" type="xml">
                <search string="Expedient">
                    <!--<field name="dependency"/>
                    <field name="number"/>
                    <field name="created_year"/>-->
                    <field name="exp_id"/>
                    <field name="create_date"/>
                </search>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_odisea_expedient_tree" model="ir.ui.view">
            <field name="name">odisea.expedient.tree</field>
            <field name="model">odisea.expedient</field>
            <field name="arch" type="xml">
                <tree string="Expedient">
<!--                    colors="grey:state=='cancelled';blue:state in (u'open',);black:state in (u'annulled', u'in_revision', u'closed');red:state in ()"
                    
                    <field name="dependency" nolabel="0"/>
                    <field name="number" nolabel="0"/>
                    <field name="created_year" nolabel="0"/>-->
                    <field name="exp_id"/>
                    <field name="create_date" string="Date"/>
		    <field name="front_page"/>
	            <field name="issue"/>
		    <field name="goods"/>
                </tree>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_odisea_expedient_form" model="ir.ui.view">
            <field name="name">odisea.expedient.form</field>
            <field name="model">odisea.expedient</field>
            <field name="arch" type="xml">
                <form string="Expedient">
		     <header>
                        <button name="sgn_to_revision"
                           	states="open"
                           	string="To Revision"
				class="oe_highlight"/>
                        <button name="sgn_close"
                        	states="in_revision"
                           	string="Close"
                           	class="oe_highlight"/>
			<button name="sgn_reopen"
                        	states="close"
                           	string="Reopen"
                           	class="oe_highlight"/>
                        <field name="state" widget="statusbar"
                           	statusbar_colors='{}'/>
                    </header>
		    <sheet string="Expedient">
                        <group string="Expedient" class="oe_inline">
<!--			<label for="planned_revenue" class="oe_edit_only"/>-->
			<h2>
			   <field name="dependency" class="oe_inline" nolabel="1"/>-
	                   <field name="number" class="oe_inline" nolabel="1"/>-
             	           <field name="created_year" class="oe_inline" nolabel="1"/>
			</h2>
			</group>
			<label for="front_page" class="oe_edit_only"/>
			<h1>
			<field name="front_page" string="Front Page" nolabel="0"/>
			</h1>
			<group>
			   <field name="issue_type" class="oe_inline" nolabel="0"/>
	                   <field name="issue" class="oe_inline" nolabel="0"/>
			</group>
			<group>
			<field name="goods" string="Goods" nolabel="0"/>
			</group>
			<group>
                   	   <field name="create_date" readonly="1"/>
			</group>
	               <notebook>
			  <page string="Notes"> <!-- attrs="{'invisible': [('note_ids', '=',[])]}" >-->
                                <field name="note_ids" />
                            </page>

                            <page string="Events">
                                <field name="event_ids" />
                            </page>

                            <page string="Childs">
                                <field name="child_ids" />
                            </page>
                        </notebook>

		   </sheet>
                </form>
            </field>
        </record>


    </data>
</openerp>
